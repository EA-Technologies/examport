<!DOCTYPE html>
<html>
	<head>
	  <title>Exam</title>

	  <%= stylesheet_link_tag    'application', media: 'all' %>
 	  <%= javascript_include_tag 'application' %>

	  <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
	  <%= csrf_meta_tags %>
	</head>
	<body>
	 	<header>
 		  <nav>
		    <div class="nav-wrapper cyan darken-3">
          <div class="row">
            <div class="col s4">
              <a href="#" class="brand-logo">
                <%= image_tag("ea-logo1.png", :alt => "Logo", class: 'responsive-img') %>
              </a>
            </div>
            <% if current_user && current_user.email == "admin@admin.com" %>
              <ul id="nav-mobile" class="col l9 s8">
                <li class="right">
                  <%= link_to "Setting", settings_path %></li>
                </li>
              </ul>
              <ul id="nav-mobile" class="col l2 s3" style="padding-right: 52px;">
                <li class="right">
                  <%= link_to "Check Test", response_sets_path %></li>
                </li>
              </ul>
              <ul id="nav-mobile" class="col s1 l1">
                <li class="right">
                  <%= link_to "Signout", destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            <% else %>
              <% if current_user %>
                <% if @questions %>
                  <div class="col s8 l9 right-align">
                    <h6>Total Time : 10 minutes</h6>
                    <h6>Remaining Time: <span id="ms_timer" class="yellow lighten-3 center black-text">
                    </span></h6>
                  </div>
                  <div class="col s3 l2" style="padding-left: 33px;">
                    <h6>Total Questions : <%= @questions.size %></h6>
                    <h6>Remaining Questions: <span class="yellow lighten-3 center black-text" id="remaining_ques"><%= @questions.size %></span></h6>
                <% end %>
                </div>
                <ul id="nav-mobile" class="col s1 l1">
                  <li class="right">
                    <%= link_to "Signout", destroy_user_session_path, method: :delete %>
                  </li>
                </ul>
              <% end %>
	        	<% end %>
          </div>
		    </div>
		  </nav>
	 	</header>
	 	<content>
		  <div class="container z-depth-2 white">
        <div class="content row">
  		  	<%= yield %>
        </div>
      </div>
	 	</content>
    <footer class="page-footer cyan darken-3 center white-text">
      Â© 2015 Copyright EA Technologies
    </footer>
	</body>
</html>