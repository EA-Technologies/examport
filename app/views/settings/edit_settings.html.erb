<div class="col s10 offset-s1">
  <div class="row padding">
    <h4>Edit Settings</h4>
  </div>
  <div class="row">
    <div class="col s8">
      <%= form_for :settings, {url: update_settings_path} do |f| %>
        <% @settings.each do |setting| %>
          <div class="row">
            <div class="input-field">
              <%= f.fields_for "#{setting.id}" do |ff| %>
                <%= ff.text_field :value, value: setting.value  %><br />
                <%= ff.label :name, setting.name.humanize %>
              <% end %>            
            </div>
          </div>
        <% end %> 

        <div class="input-field">
          <%= submit_tag "Update Settings", class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
