<div class="col s10 m10 offset-s1 offset-m1" style="padding-top: 20px;">
  <h4 class="padding-10">Log In</h4>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login') do |f| %>
    <div class="row">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, name: 'email', autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, name: 'password', autocomplete: "off" %>
      </div>
    </div>
    <div class="row">  
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    </div>
    <div class="row">  
      <div class="actions">
        <%= f.submit "Log in", class: "btn green" %>
      </div>
    </div>
  <% end %>
</div>